
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

@model List<Bibliothek.Model.Entity.Category>

<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin/Home/Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Product/List">Ürünler</a></li>
        <li class="breadcrumb-item">Ürün Ekle</li>
    </ul>
    <hr>
    <div class="col-md-3">
        <form action="/Admin/Product/Add" method="post" enctype="multipart/form-data" style="margin-top:20px;">
            <div class="form-group">
                <label for="CategoryID">Kategori Seçiniz</label>
                <select name="CategoryID" id="selector" class="form-control">
                    <option>Lütfen Seçiniz</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Name">Ürün İsmi</label>
                <input type="text" name="Name" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Price">Ürün Fiyatı</label>
                <input type="text" name="Price" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="MarketPrice">PSF</label>
                <input type="text" name="MarketPrice" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="UnitsInStock">Stok Miktarı</label>
                <input type="text" name="UnitsInStock" value="30" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Quantity">Birimi</label>
                <input type="text" name="Quantity" value="1" class="form-control" />
            </div>
            <div class="form-group" id="Star">
                <label for="Star">Oyuncu</label>
                <input type="text" name="Star" value="" class="form-control" />
            </div>
            <div class="form-group" id="Director">
                <label for="Director">Yönetmen</label>
                <input type="text" name="Director" value="" class="form-control" />
            </div>
            <div class="form-group" id="Author">
                <label for="Author">Yazar</label>
                <input type="text" name="Author" value="" class="form-control" />
            </div>
            <div class="form-group" id="Artist">
                <label for="Artist">Sanatçı</label>
                <input type="text" name="Artist" value="" class="form-control" />
            </div>
            <div class="form-group" id="TradeMark">
                <label for="TradeMark">Marka</label>
                <input type="text" name="TradeMark" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Description">Açıklama</label>
                <textarea type="text" name="Description" rows="5" value="" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="Image">Fotoğraf</label>
                <input type="file" name="Image" value="" class="form-control" />
            </div>
            <input type="submit" name="name" value="Ürün Ekle" class="btn btn-success pull-right" style="margin-bottom:20px;" />
            <br />
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#selector").change(function () {
            var conceptName = $('#selector').find(":selected").text();

            switch (conceptName) {
                case "Kitap":
                    $("#Star").hide();
                    $("#Director").hide();
                    $("#Artist").hide();
                    $("#TradeMark").hide();
                    $("#Author").show();
                    break;

                case "Film":
                    $("#Star").show();
                    $("#Director").show();
                    $("#Artist").hide();
                    $("#TradeMark").hide();
                    $("#Author").hide();
                    break;

                case "Müzik":
                    $("#Star").hide();
                    $("#Director").hide();
                    $("#Artist").show();
                    $("#TradeMark").hide();
                    $("#Author").hide();
                    break;

                case "Hobi & Oyuncak":
                    $("#Star").hide();
                    $("#Director").hide();
                    $("#Artist").hide();
                    $("#TradeMark").show();
                    $("#Author").hide();
                    break;

                default:
                    $(".form-group").show();
                    break;
            }
        })
    })
</script>

