@model Bibliothek.UI.Areas.Web.Models.VM.RegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Web/Views/Shared/_SharedWebLayout.cshtml";
}

<link href="~/Content/Css/login-register.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Scripts/jquery.inputmask.js"></script>
@using (Html.BeginForm())
{
    <br /><br />
   
        <div class="row" style="margin-left: 300px;">
            <div class="col-lg-12 offset-2">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu  </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınız" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Soyadınız" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Mail Adresiniz" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Telefon" data-inputmask="'mask': '(999) 999 99 99'" value="" required>
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password", minlength = 6 })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password", minlenght = 6 })
                    </div>

                    <div class="form-group ">
                        <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>
                </div>
            </div>
        </div>
   
}

        <script type="text/javascript">
            $(document).ready(function () {
                $("#CategoryList").toggle();
                $(".footer").hide();
                $(':input[data-inputmask]').each(function (i, e) {
                    $(e).inputmask($(e).attr('data-inputmask'));
                });

            });

        </script>




