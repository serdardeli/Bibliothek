@using Bibliothek.UI.Areas.Web.Models.VM
@model NonRegisterVM
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Areas/Web/Views/Shared/_SharedWebLayout.cshtml";
}

<link href="~/Content/Css/login-register.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Scripts/jquery.inputmask.js"></script>

@using (Html.BeginForm())
{
    <br /><br />

          <div class="row" style="margin-left: 280px;">
              <div class="col-lg-12 offset-2">
                  <div class="form-header">
                      <h1 class="text-center ">Kayıt Formu  </h1>
                  </div>
                  <div class="main-content">

                      @Html.ValidationSummary(false)

                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                          <input id="Name" name="Name" class="form-control" placeholder="Adınız" required />
                      </div>

                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                          <input id="LastName" name="LastName" class="form-control" placeholder="Soyadınız" required />
                      </div>

                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                          <input id="Email" name="Email" class="form-control" placeholder="Mail Adresiniz" type="email" required />
                      </div>

                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
                          <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Telefon" data-inputmask="'mask': '(999) 999 99 99'" value="" required>
                      </div>


                      <br />
                      <div class="form-group ">
                          <input type="submit" value="Devam Et" class="btn btn-primary btn-block login-button" />
                      </div>
                  </div>
              </div>
          </div>


 }

<script type="text/javascript">
    $(document).ready(function () {
        $("#CategoryList").toggle();
        $(".footer").hide();
        $(':input[data-inputmask]').each(function (i, e) {
            $(e).inputmask($(e).attr('data-inputmask'));
        });

    });

</script>






