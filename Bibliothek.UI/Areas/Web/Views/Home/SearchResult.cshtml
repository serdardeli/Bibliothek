
@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Areas/Web/Views/Shared/_SharedWebLayout.cshtml";
}
@model Bibliothek.UI.Areas.Web.Models.VM.ProductVM

<div class="container" style="margin-top:50px;">
    <div class="row">
        
        @if (ViewBag.Search != null)
        {
        <div class="col-lg-4 col-md-6 mb-4" id="div">
            <div class="card h-100">
                <a href="/Web/Product/ProductDetails/@Model.ID"><img class="card-img-top" src="@Model.ImagePath" width="50" height="300" alt=""></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a id="productName" href="/Web/Product/ProductDetails/@Model.ID">@Model.Name</a>
                    </h4>
                    <hr />
                    <p class="card-text">
                        @if (Model.Description.Length > 150)
                        {
                            @Model.Description.Substring(0, 150)<span>...</span>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </p>
                </div>
                <div class="card-footer" id="data">
                    <div class="pull-left">
                        <h5>@Model.Price ₺</h5>
                    </div>
                </div>
            </div>
        </div>
        }
            

        
    </div>
    <hr />
    <div class="row" style="text-align:center">
        <h2><strong>Önerilen Diğer Ürünler</strong></h2>
        <div class="row col-lg-9" style="margin:20px auto; text-align:left">
            @foreach (var product in ViewBag.RandomSearch as List<Bibliothek.Model.Entity.Product>)
            {
                <div class="col-lg-4 col-md-6 mb-4" id="div">
                    <div class="card h-100">
                        <a href="/Web/Product/ProductDetails/@product.ID"><img class="card-img-top" src="@product.ImagePath" width="50" height="300" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a id="productName" href="/Web/Product/ProductDetails/@product.ID">@product.Name</a>
                            </h4>
                            <hr />
                            <p class="card-text">
                                @if (product.Description.Length > 150)
                                {
                                    @product.Description.Substring(0, 150)<span>...</span>
                                }
                                else
                                {
                                    @product.Description
                                }
                            </p>
                        </div>
                        <div class="card-footer" id="data">
                            <div class="pull-left">
                                <h5>@product.Price ₺</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
    </div>    
</div>




